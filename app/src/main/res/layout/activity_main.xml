<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCodigo"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:id="@+id/textView2"
        android:layout_below="@+id/txtCodigo"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDecripcion"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnConsultaDesc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:id="@+id/textView3"
        android:layout_below="@+id/txtDecripcion"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPrecio"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtDecripcion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alta"
        android:id="@+id/btnAlta"
        android:layout_below="@+id/txtPrecio"
        android:layout_alignParentStart="true"
        android:onClick="alta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulta por codigo"
        android:id="@+id/btnConsultaCod"
        android:layout_below="@+id/btnAlta"
        android:layout_alignParentStart="true"
        android:onClick="consultaCodigo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulta por descripcion"
        android:id="@+id/btnConsultaDesc"
        android:layout_below="@+id/btnConsultaCod"
        android:layout_alignParentStart="true"
        android:onClick="consultaDesc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBaja"
        android:layout_below="@+id/btnConsultaDesc"
        android:layout_alignParentStart="true"
        android:text="baja por codigo"
        android:onClick="baja" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="modificacion"
        android:id="@+id/btnModificar"
        android:layout_below="@+id/btnBaja"
        android:layout_alignParentStart="true"
        android:onClick="modificar" />
</RelativeLayout>
